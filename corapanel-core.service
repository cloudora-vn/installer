[Unit]
Description=CoraPanel, a modern open source linux panel
After=syslog.target network-online.target
Wants=network-online.target

[Service]
ExecStart=/usr/bin/corapanel-core
ExecReload=/bin/kill -s HUP $MAINPID
Restart=always
RestartSec=5
LimitNOFILE=1048576
LimitNPROC=1048576
LimitCORE=1048576
Delegate=yes
KillMode=process

[Install]
WantedBy=multi-user.target
